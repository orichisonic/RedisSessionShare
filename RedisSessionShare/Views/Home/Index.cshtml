@using RedisSessionShare.Controllers
@model RedisSessionShare.Controllers.test

<!DOCTYPE html>

<html>
<head>
    <title>Index</title>
</head>
<body>
    <div>
        <H1>
            登录:
            @if (this.Context.SessionExt().IsLogin())
            {
                @Model.name
            }
            else
            {
                @("未登录")
            }
            <H1>

                @using (Html.BeginForm("Login", "Home"))
                {

                    @("登录名： ")
                    @Html.TextBox("name")

                    <input type="submit" />

                }

                <H2>当前用户在线：@(new RedisSessionShare.Module.SessionManager().Count())

    </div>
</body>
</html>
